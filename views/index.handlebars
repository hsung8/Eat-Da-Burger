<div class="conatainer">
    <div class="jumbotron col-12">
        <img src="../public/assets/img/burger.png" alt="burger" id="image-center">
        <h1>Eat-Da-Burger!</h1>
    </div>
</div>

<div class=container>
    <div class="card col-lg-6 col-md-6 col-sm-12">
        <div class="card-body">
            <h3 class="card-title">Burger wish list</h3>
            <ul>
                {{#each burgers}}
                {{#unless ate}}
                {{> burgers/burger-block eat=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>
    </div>

    <div class="card col-lg-6 col-md-6 col-sm-12">
        <div class="card-body">
            <h3 class="card-title">Burgers that I ate!</h3>
            <ul>
                {{#each burgers}}
                {{#if ate}}
                {{> burgers/burger-block eat=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>


<div class=container>
    <h2>Add a Burger to your wish list</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="bu">Burger name:</label>
            <input type="text" id="bu" name="name">
        </div>
        <button type="submit">Add</button>
    </form>
</div>